/* pages/index/com/upload.wxss */
.upload-box{
    display: grid;
    grid-template-columns: repeat(3, 1fr); /* 相当于 1fr 1fr 1fr */
    grid-template-rows: repeat(3, 1fr); /* fr单位可以将容器分为几等份 */
    grid-gap: 1%; /* grid-column-gap 和 grid-row-gap的简写 */
    grid-auto-flow: row;
}

.item-box{
    width: 100%;
    padding-top: 100%;
    position: relative;
    position: relative;
    flex-shrink: 3;
}

.view-image{
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
}

.view-delete{
    width: 15%;
    height: 15%;
    background: #ff3f0f;
    position: absolute;
    border-radius: 50%;
    right: 0;
    top: 0;
    transform: translate(50%, -50%);
    z-index: 2;
}

.view-delete::before{
    content: '';
    position: absolute;
    left: 50%;
    top: 50%;
    width: 50%;
    height: 5rpx;
    background: #fff;
    transform: translate(-50%, -50%) rotate(45deg);
}

.view-delete::after {
    content: '';
    position: absolute;
    left: 50%;
    top: 50%;
    width: 5rpx;
    height: 50%;
    transform: translate(-50%, -50%) rotate(45deg);
    background: #fff;    
}

.item-plus{
    border: 1rpx solid #999; 
}

.item-plus::before{
    content: '';
    position: absolute;
    left: 50%;
    top: 50%;
    width: 30%;
    height: 5rpx;
    background: #999;
    transform: translate(-50%, -50%);
}

.item-plus::after {
    content: '';
    position: absolute;
    left: 50%;
    top: 50%;
    width: 5rpx;
    height: 30%;
    transform: translate(-50%, -50%);
    background: #999;    
}
