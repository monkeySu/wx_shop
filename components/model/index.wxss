/* components/model/index.wxss */

.modal{
    width: 100vw;
    height: 100vh;
    position: fixed;
    top: 0;
    left: 0;
    background:rgba(0,0,0,.4);
    z-index: 50;
}

.content{
    width:590rpx;
    min-height:280rx;
    background:rgba(255,255,255,1);
    border-radius:4rpx;
    border:2rpx solid rgba(151,151,151,1);
    position: absolute;
    top: 300rpx;
    left: 50%;
    transform: translateX(-50%);
    padding: 48rpx 0 32rpx 0;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.title{
    width: 500rpx;
    font-size:32rpx;
    font-family:PingFangSC-Medium,PingFangSC;
    font-weight:500;
    color:rgba(51,51,51,1);
    line-height:44rpx;
    font-weight: bold;
    text-align: center;
}

.desc{
    width:500rpx;
    font-size:28rpx;
    font-family:PingFang-SC-Medium,PingFang-SC;
    font-weight:500;
    color:rgba(51,51,51,1);
    line-height:40rpx;
    margin-top: 24rpx;
    text-align: center;
}

.button-grounp{
    display: flex;
    justify-content: space-between;
    width:500rpx;
    margin-top: 72rpx;
}

.cancel{
    width: 240rpx;
    height: 80rpx;
    text-align: center;
    line-height: 80rpx;
    border:2rpx solid rgba(221,221,221,1);
    font-size:28rpx;
    color:rgba(51,51,51,1);
}

.confirm{
    width: 240rpx;
    height: 80rpx;
    text-align: center;
    line-height: 80rpx;
    font-size:28rpx;
    color:#fff;
    background: #D73F3F;
}