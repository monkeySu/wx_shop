.checkout_list {
  padding: 10px 15px 2px 15px;
  background: #fff;
  border-bottom: 1rpx solid #eee;
}

.checkout_list .flow-shopList {
  padding: 5rpx 0 10rpx;
  border-bottom: 1rpx solid #eee;
  position: relative;
  flex-wrap: wrap;
}

.checkout_list .flow-shopList:last-child {
  border-bottom: 0;
}

.flow-header-left {
  padding-left: 90rpx;
}

.count{
  position: absolute;
  top: 24rpx;
  right: 34rpx;
  font-size: 24rpx;
  font-family:PingFang-SC-Medium,PingFang-SC;
  font-weight:500;
  color:rgba(153,153,153,1);
  line-height:34rpx;
}

.flow-bottom{
  width: 100%;
  display: flex;
  margin-top: 38rpx;
  justify-content: space-between;
  align-items: center;
}

.pay-way{
  font-size:28rpx;
  font-family:PingFang-SC-Medium,PingFang-SC;
  font-weight:500;
  color:rgba(51,51,51,1);
  line-height:40rpx;
}

.price-box{
  display: flex;
  flex-direction: column;
}

.navigate-box{
  display: flex;
  width: 100%;
}

.flower-count{
  font-size:24rpx;
  font-family:PingFang-SC-Medium,PingFang-SC;
  font-weight:500;
  color:rgba(220,167,114,1);
  line-height:34rpx;
  height: 34rpx;
  position: relative;
  display: block;
}

.flower-count:after{
  content: "";
  background: url(https://img-mall.irishoney.com/Flkynoy8xQIvBYbYUPg9Gz081r-M.png) no-repeat center/100%;
  width: 24rpx;
  height: 24rpx;
  position: absolute;
  left: -12rpx;
  top: 50%;
  transform: translate(-50%, -50%);
}


.flow-cont{
  font-size:24rpx;
  font-family:PingFang-SC-Medium,PingFang-SC;
  font-weight:500;
  color:rgba(215,63,63,1);
  line-height:34rpx;
  margin-top: 8rpx;
  display: inline-block;
  text-align: right;
}