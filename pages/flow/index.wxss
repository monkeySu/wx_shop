.checkbox-box{
  margin: 0 24rpx;
  padding: 0;
}

/* 未选中的 背景样式 */
  checkbox .wx-checkbox-input{
    border-radius: 50%;/* 圆角 */
    width: 32rpx; /* 背景的宽 */
    height: 32rpx; /* 背景的高 */
  }
  
  /* 选中后的样式 （可根据设计稿需求自己修改） */
  checkbox .wx-checkbox-input.wx-checkbox-input-checked{
    background: #D73F3F;
    border-color: #D73F3F;
  }
  
  checkbox .wx-checkbox-input.wx-checkbox-input-checked::before{
    border-radius: 50%;
    width: 40rpx;
    height: 46rpx;
    line-height: 46rpx;
    text-align: center;
    font-size: 25rpx; /* 对勾大小 28rpx */
    color: #fff; /* 对勾颜色 白色 */
    background: transparent;
    transform: translate(-50%, -50%) scale(1);
    -webkit-transform: translate(-50%, -50%) scale(1);
  }