/* pages/password/list.wxss */
.container{
    width: 100vw;
    height: 100vh;
    background: #FBFBFB;
    display: flex;
    flex-direction: column;
}

.list{
    width: 100vw;
    height: 112rpx;
    text-indent: 34rpx;
    font-size:32rpx;
    font-family:PingFangSC-Regular,PingFangSC;
    font-weight:400;
    color:rgba(51,51,51,1);
    line-height:112rpx;
    position: relative;
    background: #fff;
}

.list:before{
    content: "";
    width: 24rpx;
    height: 24rpx;
    background: url(https://img-mall.irishoney.com/Fhm5T71g0XjzAjK2ncUzC2GRJBOy.png) no-repeat center/ auto 100%;
    position: absolute;
    right: 36rpx;
    top: 50%;
    transform: translateY(-50%);
}

.list:after{
    content: "";
    width:720rpx;
    height:1px;
    background: #EAEAEA;
    box-shadow:0px 0px 0px 0px rgba(234,234,234,1);
    position: absolute;
    bottom: 0;
    right: 0;
}

