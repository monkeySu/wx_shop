/* asd */

.container {
  position: relative;
}

.cate-btn {
  background: #ff495e;
  bottom: 18rpx;
  right: 18rpx;
  font-size: 20rpx;
  color: #fff;
  padding: 4px 18rpx;
}

.index-cont-search icon {
  left: 0;
  margin-left: 20rpx;
}

.index-search-box {
  top: 1rpx;
  left: 0rpx;
  right: 0rpx;
  z-index: 999;
  position: fixed;
  background: #fff;
  padding: 18rpx 13rpx;
  border-bottom: 1px solid #eee;
}

.index-search {
  border-bottom: 0;
  background: #fff;
  border-radius: 50rpx;
  overflow: hidden;
  position: relative;
  font-size: 32rpx;
  color: #999;
  box-sizing: border-box;
  height: 64rpx;
  line-height: 64rpx;
  margin: 0 10rpx;
}

.list-right {
  width: 60rpx;
}

.list-right text {
  height: 60rpx;
  line-height: 60rpx;
  font-size: 40rpx;
}

.list-header {
  position: fixed;
  top: 1rpx;
  left: 0;
  right: 0;
}

.no-more {
  text-align: center;
  color: #737373;
  margin: 10px 0;
}

.category-list {
  overflow: hidden;
}

.category-list .list {
  box-sizing: border-box;
  width: 50%;
  float: left;
}

.category-list .list:nth-child(2n) {
  border-left: 2px solid #f7f7f7;
  border-bottom: 4px solid #f7f7f7;
}

.category-list .list:nth-child(2n-1) {
  border-right: 2px solid #f7f7f7;
  border-bottom: 4px solid #f7f7f7;
}

.category-list.arrange .list {
  overflow: hidden;
  padding: 15rpx;
  border-bottom: 1rpx solid #f7f7f7;
  width: 100%;
}

.category-list.arrange .list .left {
  width: 35%;
  float: left;
}

.category-list.arrange .list .right {
  width: 65%;
  float: left;
}

.category-list.arrange .list .left .img image {
  width: 220rpx;
  height: 220rpx;
}

/* 侧边栏 */
.slide-mask{
  width: 100vw;
  height: 100vh;
  background: rgba(0,0,0,.6);
  position: fixed;
  top: 0;
  left: 0;
}

.slide-box{
  width: 480rpx;
  height: 100vh;
  position: fixed;
  right: -480rpx;
  top: 0;
  display: flex;
  flex-direction: column;
  background: #fff;
  z-index: 2;
}

.slide-title{
  width:480rpx;
  height:96rpx;
  box-sizing: border-box;
  background:rgba(247,247,247,1);
  font-size:36rpx;
  font-family:PingFangSC-Medium,PingFangSC;
  font-weight:500;
  color:rgba(51,51,51,1);
  line-height:96rpx;
  text-indent: 32rpx;
  position: relative;
}

.slide-title:after{
  content: "";
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width:12rpx;
  height:40rpx;
  background:rgba(220,167,114,1);
}

.slide-item{
  width: 480rpx;
  display: flex;
  flex-direction: column;
}

.slide-item-title{
  width: 100%;
  font-size:28rpx;
  font-family:PingFang-SC-Medium,PingFang-SC;
  font-weight:500;
  color:rgba(51,51,51,1);
  line-height:40rpx;
  text-indent: 32rpx;
}

.slide-item-options{
  display: flex;
  flex-wrap: wrap;
  width: 500rpx;
}

.slide-item-options .option{
  padding: 0rpx 24rpx;
  display: inline-block;
  height:64rpx;
  background:rgba(247,247,247,1);
  border-radius:2px;
  font-size:24rpx;
  font-family:PingFang-SC-Medium,PingFang-SC;
  font-weight:500;
  color:rgba(51,51,51,1);
  line-height:64rpx;
  margin-left: 24rpx;
  margin-top: 24rpx;
}
