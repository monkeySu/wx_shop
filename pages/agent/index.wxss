/* pages/agent/index.wxss */
.banner{
    width:686rpx;
    height: 232rpx;
    background:rgba(255,255,255,1);
    box-shadow:0px 4rpx 16rpx 0px rgba(0,0,0,0.05);
    border-radius:4rpx;
    margin: 0 auto;
    margin-top: 32rpx;
    display: block;
}

.card{
    width:686rpx;
    height:232rpx;
    background:rgba(255,255,255,1);
    box-shadow:0px 4rpx 16rpx 0px rgba(0,0,0,0.05);
    border-radius:4rpx;
    margin: 0 auto;
    margin-top: 32rpx;          
}

.content-title{
    height:50rpx;
    font-size:36rpx;
    font-family:PingFangSC;
    font-weight:500;
    color:rgba(51,51,51,1);
    line-height:50rpx;
    text-align: center;
    margin: 0 auto;
    padding-top: 32rpx;
    display:table;
    position: relative;
}

.rect-box{
    width: 16rpx;
    height: 16rpx;
    background: #D73F3F;
    transform: rotate(45deg);
    position: absolute;
    bottom: 15rpx;
}

.before{
    left:-32rpx;
}

.content-title:before{
    content: "";
    width: 68rpx;
    height: 2rpx;
    background: linear-gradient(to right, #fff, #D73F3F);
    position: absolute;
    left: -108rpx;
    bottom: 23rpx;

}

.content-title:after{
    content: "";
    width: 68rpx;
    height: 2rpx;
    background: linear-gradient(to left, #fff, #D73F3F);
    position: absolute;
    right: -108rpx;
    bottom: 23rpx;

}

.after{
    right: -32rpx;
}

.navigateToApply{
    width:686rpx;
    height:80rpx;
    background:rgba(215,63,63,1);
    border-radius:4rpx;
    font-size:28rpx;
    font-family:PingFang-SC;
    font-weight:500;
    color:rgba(255,255,255,1);
    line-height:80rpx;
    position: fixed;
    left: 50%;
    transform: translateX(-50%);
    bottom: 88rpx;
}