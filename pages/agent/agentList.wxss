/* pages/agent/agentList.wxss */

.container{
    background: #fff;
    height: calc(100vh - 48rpx);
    padding-top: 48rpx;
    font-size:32rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.avatar{
    width: 128rpx;
    height: 128rpx;
    margin: 0 auto;
    margin-top: 48rpx;
    background: #F7F7F7;
    border-radius: 50%;
}

.nickname{
    height:22px;
    font-size:36rpx;
    font-family:PingFangSC;
    font-weight:400;
    color:rgba(51,51,51,1);
    line-height:22px;
    text-align: center;
    margin-top: 48rpx;
}

.input-box{
    width: 100vw;
    height: 96rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    position: relative;
    background: #fff;
}

.input-box:first-child{
    margin-top: 32rpx;
}

.input-box:after{
    content: '';
    width:726rpx;
    height:2rpx;
    background:#FBFBFB;
    box-shadow:0px 0px 0px 0px rgba(234,234,234,1);
    position: absolute;
    bottom: 0;
    right: 0;
}

.label{
    height:40rpx;
    font-family:PingFang-SC;
    font-weight:500;
    color:rgba(51,51,51,1);
    padding-left: 34rpx;
}

.input{
    width: 510rpx;
    height: 96rpx;
    line-height: 96rpx;
    font-family:PingFang-SC;
    font-weight:500;
    text-align: right;
    margin-right: 32rpx;
    color: #999999;
    /* color:rgba(221,221,221,1); */
}