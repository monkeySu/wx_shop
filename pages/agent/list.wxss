/* pages/agent/list.wxss */

.container{
    background: #fff;
}

.list{
    width: 718rpx;
    display: flex;
    margin: 0 auto; 
    border-bottom: 2rpx #EAEAEA solid;
    padding: 44rpx 0 40rpx 0;
    box-sizing: border-box;
}

.avatar{
    width:80rpx;
    height:80rpx;
    border-radius: 50%;
    margin-left: 32rpx;
    
}

.content{
    display: flex;
    flex-direction: column;
}

.nickname{
    height:44rpx;
    font-size:32rpx;
    font-family:PingFangSC;
    font-weight:400;
    color:rgba(51,51,51,1);
    line-height:44rpx;
}

.content-item{
    display: flex;
    margin-top: 4rpx;
    height: 32rpx;
    font-size:23rpx;
    font-family:PingFangSC;
    font-weight:400;
    /* color:rgba(184,184,184,1); */
    line-height:36rpx;
}

.item-title{
    color:rgba(184,184,184,1);
}

