<view class="container">

  <scroll-view bindscroll="scroll" scroll-top="{{scrollTop}}" scroll-y="true" style="position:absolute; top:0; left:0; right:0; bottom:0;">
    <block wx:for="{{items}}" wx:for-item="item" wx:for-index="item_key" wx:key="this">
      <!-- 搜索框 -->
      <block wx:if="{{item.type === 'search'}}">
        <include src="components/search/search.wxml" />
      </block>
      <!-- banner轮播 -->
      <block wx:if="{{item.type === 'banner'}}">
        <include src="components/banner/banner.wxml" />
      </block>
    </block>
    <!-- 商品推荐 -->
    <view class="recommended-index-list m-top20">
      <view class="title-header b-f t-c f-32 col-3">新品推荐</view>
    </view>
    <view class="index_sale ">
      <scroll-view scroll-x="true">
        <navigator hover-class="none" style="display: inline-block;" url="../goods/index?goods_id={{item.goods_id}}" wx:for="{{newest}}" wx:key="this">
          <view class="page-column">
            <view class="sale_img">
              <image mode="aspectFill" src="{{item.image[0].file_path}}"></image>
            </view>
            <view class="content onelist-hidden">
              <text>{{item.goods_name}}</text>
            </view>
            <text class="price col-m f-30">￥{{item.spec[0].goods_price}}</text>
          </view>
        </navigator>
      </scroll-view>
    </view>

    <!-- 通知 -->
    <view class="notice" hover-class="none" hover-stop-propagation="false">
      <swiper 
        class="notice-box"
        indicator-dots="{{false}}"
        autoplay="{{true}}"
        interval="2000" 
        duration="500" 
        circular="false" 
        vertical="true" 
        display-multiple-items="1" 
        skip-hidden-item-layout="false" 
      >
      <swiper-item class="notice-item">
        庆祝Dior迪奥珠宝问世二十周年
      </swiper-item>
      <swiper-item class="notice-item">
        庆祝Dior迪奥珠宝问世二十周年
      </swiper-item>
      </swiper>
    </view>

    <!-- 商品列表 -->

    <view class="commodity-list">
      <view class="commodity-title" hover-class="none" hover-stop-propagation="false">
        推荐产品
      </view>
      <view class="commodity-item" hover-class="none" hover-stop-propagation="false">
        <image src="http://static.runoob.com/images/demo/demo2.jpg" class="item-img"></image>
        <view class="item-content" hover-class="none" hover-stop-propagation="false">
          <view class="content-title">750/1000黄金镶钻项链</view>
          <view class="content-decs">750/该系列重新演绎Mimioui系列...</view>
          <view class="content-original-price" hover-class="none" hover-stop-propagation="false">
            ￥13333
          </view>
          <view class="content-price" hover-class="none" hover-stop-propagation="false">
            <view class="cash-price" hover-class="none" hover-stop-propagation="false">
              ￥1222
            </view>
            <view class="integral-price" hover-class="none" hover-stop-propagation="false">
              1499
            </view>
          </view>
        </view>
      </view>

      <swiper 
        class="commodity-swiper"
        indicator-dots="{{false}}"
        interval="2000" 
        duration="500" 
        circular="false"
        display-multiple-items="3" 
        skip-hidden-item-layout="false"
        next-margin="24rpx"
      >
      <swiper-item class="commodity-swiper-item">
        <image class="item-image" src="http://static.runoob.com/images/demo/demo2.jpg" mode="aspectFit|aspectFill|widthFix" lazy-load="false" binderror="" bindload="">
        </image>
        <view class="item-name" hover-class="none" hover-stop-propagation="false">
          OUI 750/1000玫…
        </view>
        <view class="integral-price" hover-class="none" hover-stop-propagation="false">
          1699.00
        </view>
        <view class="price" hover-class="none" hover-stop-propagation="false">
          1699.00
        </view>
      </swiper-item>
      <swiper-item class="commodity-swiper-item">
        <image class="item-image" src="http://static.runoob.com/images/demo/demo2.jpg" mode="aspectFit|aspectFill|widthFix" lazy-load="false" binderror="" bindload="">
        </image>
        <view class="item-name" hover-class="none" hover-stop-propagation="false">
          OUI 750/1000玫…
        </view>
        <view class="integral-price" hover-class="none" hover-stop-propagation="false">
          1699.00
        </view>
        <view class="price" hover-class="none" hover-stop-propagation="false">
          1699.00
        </view>
      </swiper-item>
      <swiper-item class="commodity-swiper-item">
        <image class="item-image" src="http://static.runoob.com/images/demo/demo2.jpg" mode="aspectFit|aspectFill|widthFix" lazy-load="false" binderror="" bindload="">
        </image>
        <view class="item-name" hover-class="none" hover-stop-propagation="false">
          OUI 750/1000玫…
        </view>
        <view class="integral-price" hover-class="none" hover-stop-propagation="false">
          1699.00
        </view>
        <view class="price" hover-class="none" hover-stop-propagation="false">
          1699.00
        </view>
      </swiper-item>
