/* 用户信息 */

.user {
  position: relative;
  background: #fff;
  margin-bottom: 150rpx;
}

.user-header {
  display: flex;
  padding-top: 1px;
  width: 100%;
  height: 310rpx;
  align-content: center;
  background-color: #1B0E02;
  background-repeat: no-repeat;
  background-position: center right;
  background-size: 100%;
}

.user-header .user-header-cont {
  display: flex;
  /* margin: auto; */
  align-items: center;
  height: 136rpx;
  margin: 32rpx 0 0 32rpx;
}

.user-header .user-header-cont .user-header-avatar {
  display: block;
  margin-right: 32rpx;
  width: 136rpx;
  height: 136rpx;
  border-radius: 50%;
  border: 5rpx solid #fff;
  overflow: hidden;
  box-sizing: border-box;
}

.user-header .user-header-cont .user-header-avatar image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}

.user-header .user-header-cont .user-header-cont-name {
  font-size:48rpx;
  font-family:PingFangSC-Medium,PingFangSC;
  font-weight:500;
  color:rgba(220,167,114,1);
  line-height:66rpx;
}

/* 会员 */

.vip-box{
  width:702rpx;
  height:96rpx;
  background:linear-gradient(90deg,#EDBD8D,#DCA772);
  box-shadow:0px 4rpx 24rpx 0px rgba(0,0,0,0.06);
  border-radius:4rpx;
  font-size:28rpx;
  font-family:PingFangSC;
  font-weight:500;
  color:rgba(51,51,51,1);
  line-height:96rpx;
  position: absolute;
  top: 236rpx;
  left: 50%;
  transform: translateX(-50%);
  text-indent: 96rpx;
}

.vip-box:before{
  content: "";
  width: 44rpx;
  height: 44rpx;
  position: absolute;
  left: 34rpx;
  top: 50%;
  transform: translateY(-50%);
  background: url(https://img-mall.irishoney.com/FpyxPkwRMDRCqp535RERCRRbcHbg.png) no-repeat center/100%;
}

.vip-box:after{
  content: "";
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  background: url(https://img-mall.irishoney.com/FmViKPhvFRBA1nFMh1ynPTdiOeoM.png) no-repeat center/auto 100%;
}

/* 财富 */
.wealth-box{
  width:702rpx;
  display: flex;
  justify-content: space-between;
  margin: 0 auto;
  margin-top: 60rpx;
}

.wealth-item{
  width:342rpx;
  height:142rpx;
  background:rgba(255,255,255,1);
  box-shadow:0px 4rpx 24rpx 0px rgba(0,0,0,0.06);
  border-radius:4rpx;
  background: #fff;
  position: relative;
}

.wealth-box .item-1:after{
  content: "";
  width: 80rpx;
  height: 72rpx;
  background: url(https://img-mall.irishoney.com/FoFkpzIZOZG4t9cfAVwH11UMFpZ_.png) center no-repeat/ 100%;
  position: absolute;
  right: 0;
  bottom: 0;
}

.wealth-box .item-2:after{
  content: "";
  width: 80rpx;
  height: 72rpx;
  background: url(https://img-mall.irishoney.com/FujFCCImD_AYIcdIO503BKBdSWK_.png) center no-repeat/ 100%;
  position: absolute;
  right: 0;
  bottom: 0;
}

.wealth-count{
  height:66rpx;
  font-size:48rpx;
  font-family:PingFangSC;
  font-weight:500;
  color:rgba(51,51,51,1);
  line-height:66rpx;
  margin-top: 20rpx;
  margin-left: 32rpx;
}

.wealth-name{
  height:34rpx;
  font-size: 24rpx;
  font-family:PingFang-SC;
  font-weight:500;
  color:rgba(153,153,153,1);
  line-height:34rpx;
  margin-top: 4rpx;
  margin-left: 32rpx;
}

/* 订单导航栏 */

.order-navbar {
  margin: auto;
  padding: 24rpx 0 36rpx 0;
  width: 95%;
  box-shadow: 0 1rpx 5rpx 0px rgba(0, 0, 0, 0.05);
  font-size: 30rpx;
  border-top: 1rpx solid #eee;
  border-radius: 5rpx;
  background: #fff;
  margin-top: 28rpx;
}

.order-navbar-header {
  margin: auto;
  padding-bottom: 10rpx;
  width: 91%;
  height: 70rpx;
  border-bottom: 1px solid #eee;
  justify-content: space-between;
  align-items: center;
}

.order-navbar-footer {
  width: 100%;
  padding: 10rpx 0px;
}

.order-navbar-footer .order-navbar-item .order-navbar__icon {
  text-align: center;
  margin: 0 auto;
  display: block;
  padding: 10rpx 0;
  color: #000;
  font-size: 36rpx;
}

.order-navbar-footer .order-navbar-item .order-navbar__name {
  display: block;
  font-size: 24rpx;
  color: #666;
  text-align: center;
  margin-right: 10rpx;
}

.order-navbar-footer .order-navbar-item .order-badge {
  position: absolute;
  top: 0;
  right: 55rpx;
  font-size: 22rpx;
  background: #ff495e;
  text-align: center;
  line-height: 28rpx;
  color: #fff;
  border-radius: 100%;
  min-height: 30rpx;
  min-width: 30rpx;
  padding: 1rpx;
}

/* 菜单列表 */

.menus-list .menus-item {
  position: relative;
  padding: 28rpx 28rpx;
  border-bottom: 1rpx solid #eee;
}

.menus-list .menus-item .menus-item__name {
  color: #444;
  margin-left: 20rpx;
}

.icon{
  width: 64rpx;
  height: 64rpx;
  margin-bottom: 24rpx;
}

.btn-normal{
  display: flex;
  flex-direction: column;
  align-items: center;
}